<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/carambarName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:text="@string/placeholder"
        android:textColor="?attr/primaryTextColor"
        app:layout_constraintStart_toEndOf="@+id/carambarImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/carambarDesc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="8dp"
        android:text="@string/placeholder_description"
        android:textColor="?attr/primaryTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/carambarImg"
        app:layout_constraintTop_toBottomOf="@+id/carambarName" />

    <ImageButton
        android:id="@+id/carambarImg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:scaleType="fitCenter"
        android:background="#fff"
        android:contentDescription="@string/carambar_image"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>