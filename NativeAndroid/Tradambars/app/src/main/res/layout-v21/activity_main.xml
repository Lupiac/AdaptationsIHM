<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="2"
    android:rowCount="10"
    tools:context="fr.unice.polytech.tradambars.MainActivity"
    android:id="@+id/MainActivityId"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:forceHasOverlappingRendering="false">

    <View
        android:id="@+id/background"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:background="@android:color/background_dark"
        android:alpha="0"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:id="@+id/button3"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/fraise"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/background" />

    <Button
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:id="@+id/button4"
        android:layout_marginEnd="30dp"
        android:background="@drawable/cola"
        android:layout_above="@+id/button5"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:id="@+id/button5"
        android:layout_marginStart="30dp"
        android:background="@drawable/xtreme"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/button4"
        android:background="@drawable/caramel" />

</RelativeLayout>
