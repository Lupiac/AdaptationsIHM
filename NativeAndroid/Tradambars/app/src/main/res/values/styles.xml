<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Light base activity theme -->
    <style name="ActivityTheme.Primary.Base.Light" parent="Theme.AppCompat.NoActionBar">
        <item name="primaryTextColor">#000000</item>
        <item name="secondaryTextColor">#657B83</item>
        <item name="android:background">#F2F2F3</item>
        <item name="dividerColor">#FDF6E3</item>
        <item name="titleColor">#0d3d9c</item>
    </style>

    <!-- Dark base activity theme -->
    <style name="ActivityTheme.Primary.Base.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="primaryTextColor">#ffffff</item>
        <item name="secondaryTextColor">#93A1A1</item>
        <item name="android:background">#062931</item>
        <item name="dividerColor">#F2F2F3</item>
        <item name="titleColor">#FFFFFF</item>
    </style>

</resources>
